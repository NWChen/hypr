{
	"manifest_version": 2,
	"name": "Hypr",
	"description": "We monitor your logins",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "index.html"
	},

	"background": {
		"scripts": ["jquery-1.11.3.min.js", "script.js"]
	},

	"permissions": [
		"activeTab",
		"tabs",
		"https://ajax.googleapis.com/"
	],

	"content_scripts": [
		{
			"matches": ["http://*/*"],
			"js": ["script.js"]
		}
	]
}